[Unit]
Description=AirQMon Webserver
After=network.target

[Service]
Type=simple
User=admin
WorkingDirectory=/home/admin/airqmon/backend
Environment="PATH=/home/admin/airqmon/backend/venv/bin"
EnvironmentFile=/home/admin/airqmon/backend/.env
ExecStart=/home/admin/airqmon/backend/venv/bin/python -m uvicorn server:app --host 0.0.0.0 --port 8000
Restart=on-failure

[Install]
WantedBy=multi-user.target
